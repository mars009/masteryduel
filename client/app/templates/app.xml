<img src="/public/img/bg.png" class="background" />
<div hidden>
	<h1>{{gameState.value}}</h1>
	<input type="text" placeholder="Event" [(ngModel)]="sockEvent"/>
	<input type="text" placeholder="Data" [(ngModel)]="sockData"/>
	<button (click)="sendMessage()">Send</button>
</div>
<div>
	<img src="/public/img/NexusRed.png" class="nexus-opponent" />
</div>
<div>
	<img src="/public/img/NexusBlue.png" class="nexus-player" />
</div>

<!-- Pick summoner -->
<div *ngIf="gameState.value==2">
	<input type="text" placeholder="Summoner Name" [(ngModel)]="summonerName"/>
	<button (click)="sendGameSelect()">Load Deck</button>
</div>
<md-championpositioner></md-championpositioner>
